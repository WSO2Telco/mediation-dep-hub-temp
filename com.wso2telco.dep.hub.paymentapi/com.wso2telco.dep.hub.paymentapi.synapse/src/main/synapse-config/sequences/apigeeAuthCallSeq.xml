<?xml version="1.0" encoding="UTF-8"?>
<sequence name="apigeeAuthCallSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
  <dblookup>
    <connection>
      <pool>
        <dsName>jdbc/WSO2TELCO_DEP_DB</dsName>
      </pool>
    </connection>
    <statement>
      <sql><![CDATA[select username,password from tokeninfo]]></sql>
      <result column="username" name="username"/>
      <result column="password" name="password"/>
    </statement>
  </dblookup>
  <payloadFactory media-type="xml">
    <format>
      <soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/">
        <soapenv:Header/>
        <soapenv:Body>
          <root>
            <grant_type>password</grant_type>
            <username>$1</username>
            <password>$2</password>
            <scope/>
          </root>
        </soapenv:Body>
      </soapenv:Envelope>
    </format>
    <args>
      <arg evaluator="xml" expression="get-property('username')"/>
      <arg evaluator="xml" expression="get-property('password')"/>
    </args>
  </payloadFactory>
</sequence>
